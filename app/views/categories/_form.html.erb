<%= simple_form_for(@category) do |f| %>
  <fieldset>
    <%= f.input :name, :label => "Название", :autofocus => focus_only_new %>
  </fieldset>

  <fieldset class="last-child">
    <%= f.input :description, :label => "Описание", :hint => "Необязательно для заполнения." %>
  </fieldset>
  
  <div class="actions">
    <%= f.submit "Сохранить" %> или <%= link_to "вернуться назад", :back, :class => "admin" %>
  </div>
<% end %>