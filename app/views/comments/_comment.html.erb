<%= content_tag_for :li, comment do%>
  <div class="type">
    <a href="#<%= comment.id %>">Комментарий</a>
  </div>
  <div class="controls">
    <span class="delete">
      <%= link_to content_tag(:span, "", :class => "icon"), comment,:confirm => 'Вы уверены?', :remote => true, :method => :delete %>
    </span>
  </div>
  <div class="content">    
    <span class="date"><%= I18n.l comment.created_at.to_time %></span>
    <span class="doctor">Боб Келсо</span>           
    <%= simple_format comment.body %>
  </div>
<% end %>