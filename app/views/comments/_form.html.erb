<%= simple_form_for(@comment, :remote => true) do |f| %>
  <fieldset>
  <%= f.input :body %>
  </fieldset>

  <div class="actions">
    <%= f.input :patient_id, :as => :hidden, :input_html => { :value => @patient.id} %>
    <%= f.submit "Добавить комментарий", :disable_with => "Сохраняем... " %>
  </div>
<% end %>

<script type="text/javascript">
  $('textarea#comment_body').autoResize({
    // On resize:
    onResize : function() {
      $(this).css({opacity:0.8});
    },
    // After resize:
    animateCallback : function() {
      $(this).css({opacity:1});
    },
    // Quite slow animation:
    animateDuration : 500
  });
</script>
